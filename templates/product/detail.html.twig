{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .img-product{
            border-radius: 20px;
            box-shadow:  2px 5px #888888;;
        }
    </style>
    <a href="{{ path('home') }}" class="btn btn-info">Back to Product List</a>
    <hr/>
    <h2 class="page-header" style="text-align: center;">{{ products.productname }}</h2>
    <ul class="list-group">
        <td> <img src="{{ asset('upload/imageProduct/' ~ products.productimg) }}" style="width: 300px;height: 300px"/><td>
            <li class="list-group-item">product Name: {{ products.productname }}</li>
            <li class="list-group-item">Tag Name: {{ products.tagname }}</li>
            <li class="list-group-item">Description: {{ products.description }}</li>

    </ul>

{% endblock %}
