{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="category">Category</label>
        {{ form_widget(form.category,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="category">Product Name:</label>
        {{ form_widget(form.productname,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Product name'
            }
        }) }}
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        {{ form_widget(form.description,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Description'
            }
        }) }}
    </div>


    <div class="form-group">
        <label for="due_date">Image</label>
        {{ form_widget(form.productimg,{

        }) }}
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        {{ form_widget(form.author,{
            'attr':{
                'class':'form-control',
                'placeholder': 'author'
            }
        }) }}
    <div class="form-group">
        <label for="tagname">tag Name:</label>
        {{ form_widget(form.tagname,{
            'attr':{
                'class':'form-control',
                'placeholder': 'tagname'
            }
        }) }}
    </div>
    <input type="submit" name="create_product" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}